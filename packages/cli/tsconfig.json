{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "noEmit": false,
    "rootDir": "src",
    "types": ["node"],
    "paths": {
      "apibara/cli": ["./src/cli"],
      "apibara/config": ["./src/config"],
      "apibara/core": ["./src/core"],
      "apibara/rolldown": ["./src/rolldown"],
      "apibara/types": ["./src/types"],
      "apibara/hooks": ["./src/hooks"],
      "apibara/create": ["./src/create"],
      "apibara/runtime/meta": ["./runtime-meta"],
      "#apibara-internal-virtual/*": ["./src/types/virtual/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/playground/**/*"]
}
